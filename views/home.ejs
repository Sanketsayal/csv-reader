<link rel="stylesheet" href="../css/home.css">

<h1>Uploaded Files</h1>

<table>
    <thead>
      <tr>
        <th>Filename</th>
        <th> </th>
        <th> </th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% files.forEach(function(file) { %>
        <tr>
          <td><%= file.filename %></td>
          <td> </td>
          <td> </td>
          <td>
            <a href="/csv/<%= file._id %>">View</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  



    <div class="contain">
        <h1 class="text-center mb-4">CSV Upload</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <div class="form-group" id="form-div">
                        <label for="csvFile">Select a CSV file to upload:</label>
                        <input type="file" class="form-control-file" id="csvFile" name="csv" accept=".csv">
                    </div>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </form>
            </div>
        </div>
    </div>

    
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
